<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SportDetailActiviy" android:background="@drawable/detail_background">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/football"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_alignParentTop="true"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/detailImage" android:layout_marginTop="38dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.15"
            android:layout_marginStart="82dp" android:layout_alignParentStart="true"
            android:backgroundTint="@color/colorPrimary"/>
    <TextView
            android:text="Detail Text"
            android:layout_below="@+id/detailImage"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/detailText" android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true" android:layout_marginBottom="212dp"
            android:textSize="30sp" android:layout_centerVertical="true"
            android:background="@drawable/background"/>
</RelativeLayout>